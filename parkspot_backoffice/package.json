    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.20",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
