  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-regenerator": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/runtime": "^7.4.2",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3"
  },
  "scripts": {
    "build:clean": "rimraf ./dist/*",
    "build:all": "yarn build:clean && yarn client:build && yarn server:build",
    "client:build": "cd ./src/client && yarn build && cross-env cp -r ./build ../../dist/client",
    "client:start": "cd ./src/client && yarn start",
    "client:test": "cd ./src/client && yarn test",
    "server:build": "babel ./src/server --out-dir ./dist && cp -r ./src/server/views dist/views && cp -r ./src/server/assets dist/assets",
    "server:lint": "eslint ./src/server",
    "server:start": "cross-env NODE_ENV=Development nodemon ./src/server/index.js --exec babel-node",
    "server:test": "cross-env NODE_ENV=Test NODE_SERVER_PORT=8081 mocha ./src/server/api/v1/tests -name '*.test.js' --require @babel/register --timeout 10000 --recursive --exit",
    "start:all": "concurrently \"yarn server:start && yarn client:start\"",
    "start:build": "cross-env NODE_ENV=Production NODE_SERVER_PORT=8082 node ./dist/index.js",
    "git:pull": "git pull && cd ./src/client && git pull"
  }
}
